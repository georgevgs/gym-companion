---
export type InputType = "search" | "text";

export interface Props {
  type: InputType;
  id?: string;
  placeholder?: string;
}

const { type, id, placeholder } = Astro.props;
---

<div class="mt-12 px-4 sm:px-6 md:px-8 lg:px-0">
  <input
    type={type}
    id={id}
    placeholder={placeholder}
    class="input input-bordered input-accent w-full rounded-lg py-2 bg-primary/10 placeholder-secondary"
  />
</div>
