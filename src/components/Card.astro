---
import { Image } from "astro:assets";
import { type CardData } from "../types";

export interface Props {
  cards: CardData[];
}

const { cards } = Astro.props;
---

<div
  class="px-4 sm:px-6 md:px-0 py-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center"
  id="cards-container"
>
  {
    cards.map((card, index) => (
      <div class="card-item">
        <a href={card.link} class="card-link block">
          <div class="card overflow-hidden transition ease-in-out hover:scale-105 cursor-pointer md:w-card-md md:h-card-md-h 2xl:w-card-lg 2xl:h-card-lg-h">
            <figure class="relative w-full h-full">
              <Image
                class="card-image hover:scale-110 transition duration-300 ease-in-out object-cover w-full h-full"
                src={card.image.src}
                alt={card.image.alt}
              />
              <div class="absolute inset-0 bg-black bg-opacity-50 backdrop-blur-sm" />
              <div class="absolute inset-0 flex items-center justify-center p-4">
                <div class="text-center">
                  <h2 class="card-title text-accent text-lg md:text-xl text-shadow font-bold">
                    {card.title}
                  </h2>
                  <p class="card-subtitle text-base-100 text-shadow text-sm">
                    {card.subtitle}
                  </p>
                </div>
              </div>
            </figure>
          </div>
        </a>
      </div>
    ))
  }
</div>
